flex-direction(dir)
  if dir == row
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    flex-direction: row
  else
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column

flex-container(dir = row)
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-direction(dir)
  
flex(args)
  -webkit-box-flex: args;
  -webkit-flex: args;
  -ms-flex: args;
  flex: args;
  
flex-grow(args)
  -webkit-box-flex: args;
  -webkit-flex-grow: args;
  -ms-flex-positive: args;
  flex-grow: args;
  
order(order)
  -webkit-box-ordinal-group: order+1;
  -webkit-order: order;
  -ms-flex-order: order;
  order: order;
  
align-items(arg)
  -webkit-box-align: arg;
  -webkit-align-items: arg;
  -ms-flex-align: arg;
  align-items: arg;
  
align-self(arg)
  -webkit-align-self: arg;
  -ms-flex-item-align: arg;
  align-self: arg;

clearfix()
  &:after
    content " "
    visibility hidden
    display block
    font-size 0
    clear both
    height 0

ul-reset()
  list-style none
  margin 0
  padding 0

pos-y-center-companion()
  &:before
    content ''
    inline-block()
    vertical-align middle
    height 100%

pos-x-center(width)
  position absolute
  right 50%
  margin-right (width / -2)

dim(width, height = width)
  height width
  width height

inline-block(important = false)
  if important is true
    display inline-block !important
  else
    display inline-block
  vertical-align: middle

remove-button()
  background none
  border 0
  padding 0

grid-col(num)
  margin-bottom grid-gutter
  width 100%

  &:last-child
    border-bottom 0

  &.grid-no-y-space
    margin-bottom 0
    padding-bottom 0
    border-bottom 0

  @media mq-med
    float left
    border 0
    width (100%/num)

    if num is 4
      width 50%
      &:nth-of-type(odd)
        clear both

    if num is 2
      &:nth-of-type(odd)
        clear both

  @media mq-lg
    border-bottom 0
    width (100%/num)

    if num is 3 or num is 4
      &:nth-of-type(odd)
        clear none

placeholder()
  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}

  &::-webkit-input-placeholder
    {block}
  
row-base()
  margin-bottom row-space
  padding-bottom row-space
  border-bottom border
  clearfix()

row(mult = 1, nested = false)
  display block
  row-base()

  if nested
    .last
      border-bottom 0
      margin-bottom 0
      padding-bottom 0
  else
    &:last-child
      border-bottom 0
      margin-bottom 0
      padding-bottom 0

stretch()
  width 100%

iconify(name)
  @extend .icon

  &:before
    @extend .icon-{name}:before

arrow-top(color, size)
	width 0 
	height 0
	border-left size solid transparent
	border-right size solid transparent
	
	border-bottom size solid color

