/*************************************************
 * TYPOGRAPHY MIXIN
 *************************************************/

type-size(size, line = 1.3)
  font-size unit(size 'px') // @TODO: where is `unit()` mixin declaration?
  font-size unit(size/10 'rem')
  line-height unit(line 'em')

type-secondary(important = false)
  if important
    color color-type-secondary !important
  else
    color color-type-secondary

remify(value)
    u = unit(value)

    if u is 'px'
      return unit(value/10 'rem')
    else
      return unit(value u)

type-serif(weight = 400, important = false)
  if important
    font-family font-serif !important
    font-weight weight !important
  else
    font-family font-serif
    font-weight weight

type-sans(weight = 400)
  font-family font-sans
  font-weight weight

type-serif-bold()
  type-serif(600)

type-sans-bold()
  type-sans(600)

type-xsmall()
  type-size(13)

type-small()
  type-size(15 1.5)

type-medium()
  type-size(18 1.4)

type-large()
  type-size(24 1.3)

type-xlarge()
  type-size(32 1.3)

type-huge()
  type-size(44 1.2)

type-xhuge()
  type-size(60 1)

type-sans-uppercase()
  type-sans-bold()
  text-transform uppercase

type-header()
  type-serif(600)
  text-transform capitalize

type-ui()
  type-sans-bold()
  type-medium()


/*************************************************
* TYPOGRAPHY COMMON
*************************************************/
html
  font-size base-font-size
  @media mq-xsm-desk
    font-size base-font-size-xsm

body,
input,
button
  -webkit-font-smoothing antialiased
  type-medium()
  color color-type

body,
input
  type-sans()

// Placeholder styles can't be stacked with any other selector, or browsers
// ignore them.
input
  +placeholder()
    // Careful setting sizes without checking line-heights in firefox and chrome
    type-secondary()

a
  color color-link

h1, h2, h3, h4, h5, h6
  type-serif()
  font-weight bold

.mod-section-dark
  h1, h2, h3, h4, h5, h6
    color color-white

heading-size(font)
  font-size: font
  line-height: (0.666 * font)

h1
  type-huge()
h2
  type-xlarge()
h3
  type-large()
  margin-bottom space*2

h4
  type-medium()
  margin-bottom space*2

h5
  type-small()
h6
  type-xsmall()

strong
  font-weight bold

a
  transition color 0.2s
  text-decoration none

  &:hover
    color color-grey-xdark

.alt-on-dark
  color color-white

  a
    color white

  .type-secondary
    color rgba(color-white, 0.5)

.alt-on-light
  a
    color color-link

.type-serif-bold
  type-serif-bold()

.type-sans-bold
  type-sans-bold()

.type-sans-uppercase
  type-sans-uppercase()

.type-small
  type-small()

.type-medium
  type-medium()

.type-large
  type-large()

.type-xlarge
  type-xlarge()

.type-huge
  type-huge()

.type-xhuge
  type-xhuge()

.type-weight-normal
  font-weight normal !important

.type-left
  text-align left

.type-center
  text-align center

.type-right
  text-align right

.type-secondary
  type-secondary()

  a
    color color-link

.type-color-white
  color color-white !important

.type-capitalize
  text-transform capitalize

.type-ui
a.type-ui
  type-ui()

.type-icon-inline
  font-size 1rem
  margin-left: (space/2)

p
  type-serif()
