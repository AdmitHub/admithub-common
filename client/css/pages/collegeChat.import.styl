#pg-college-chat
  width 100%
  height 100%
  z-index 999

  #pg-college-chat-bubble-area
    width 50px
    height 50px
    top calc(100% - 60px)
    left calc(100% - 60px)
    position fixed
    display block
    z-index 999
    cursor pointer

  #pg-college-chat-bubble
    padding 5px
    border-radius 50px
    border 3px solid lightgray
    box-shadow 0px 0px 10px 1px lightgray
    background white

  #pg-college-chat-bubble-message-count
    width 30px
    height 30px
    line-height 30px
    top -8px
    left -8px
    position absolute
    border-radius 30px
    background red
    font-size 14px
    text-align center
    font-weight bold
    color white

pg-college-chat-bar-width = 400px

#pg-college-chat-bar-area
  width pg-college-chat-bar-width
  height 100%
  top 0
  left 100%
  position fixed
  display block
  z-index 999
  transition left 0.5s

  pg-college-chat-bar-header-height = 57px
  #pg-college-chat-bar-header
    width 100%
    height pg-college-chat-bar-header-height
    line-height 70px
    padding-right 20px
    background gray
    font-size 30px
    text-align right
    color white

    i
      cursor pointer

    #pg-college-chat-bar-current-college
      width calc(100% - 30px)
      height pg-college-chat-bar-header-height
      line-height pg-college-chat-bar-header-height
      display inline-block
      float left
      text-align center

  pg-college-char-bar-colleges-width = 80px
  #pg-college-chat-bar-colleges
    width pg-college-char-bar-colleges-width
    height 100%
    padding-top 40px
    background lightgray
    text-align center
    color white

    .pg-college-chat-bar-header .icon-x::before
      cursor pointer

    .pg-college-chat-bar-item
      margin-top -20px
      display inline-block
      cursor pointer

      img
        width 50px
        height 50px
        padding 5px
        border-radius 30px
        background white

      #pg-college-chat-bar-item-unread-count
        width 30px
        height 30px
        line-height 35px
        position relative
        top -70px
        left 5px
        border-radius 30px
        background red
        text-align center

      #pg-college-chat-bar-item-name
        margin-top -40px
        color black

  #pg-college-chat-messages
    width pg-college-chat-bar-width - pg-college-char-bar-colleges-width
    height 100%
    top pg-college-chat-bar-header-height
    right 0
    position absolute
    background white

#pg-college-chat-bar-area[data-active="true"]
  left calc(100% - 400px)
